<div class="container mt-4">
  <h2>Repayment Summary</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Period</th>
        <th>Due</th>
        <th>Paid</th>
        <th>Expenses</th>
      </tr>
    </thead>
    <tbody>
      <% @periods.each do |period| %>
        <tr>
          <td><%= period.to_s.titleize %></td>
          <td><%= formatted_amount(@due_totals.fetch(period)) %></td>
          <td><%= formatted_amount(@paid_totals.fetch(period)) %></td>
          <td><%= formatted_amount(@expense_totals.fetch(period)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="card mt-4">
    <div class="card-body">
      <h4 class="card-title">Card Utilisation</h4>
      <p class="card-text"><%= number_to_percentage(@card_utilization_ratio * 100, precision: 2) %></p>
    </div>
  </div>
</div>
