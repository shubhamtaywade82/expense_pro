<h1>Expenses</h1>
<%= link_to 'New Expense', new_expense_path, class: "btn btn-primary mb-3" %>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Amount</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.incurred_on %></td>
        <td><%= expense.category %></td>
        <td><%= formatted_amount(expense.amount) %></td>
        <td><%= expense.notes %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
