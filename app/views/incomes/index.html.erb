<h1>Incomes</h1>
<%= link_to 'New Income', new_income_path, class: "btn btn-primary mb-3" %>
<table class="table">
  <thead>
    <tr>
      <th>Source</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Frequency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.source %></td>
        <td><%= income.description %></td>
        <td><%= number_to_currency(income.amount) %></td>
        <td><%= income.frequency %></td>
        <td><%= link_to 'Show', income %></td>
        <td><%= link_to 'Edit', edit_income_path(income) %></td>
        <td><%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
